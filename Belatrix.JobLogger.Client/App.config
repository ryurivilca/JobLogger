<?xml version="1.0" encoding="utf-8"?>
<configuration>
  <configSections>
    <section name="jobLoggerConfiguration"
      type="Belatrix.JobLogger.Configuration.JobLoggerConfigurationSection, Belatrix.JobLogger" />
  </configSections>

  <jobLoggerConfiguration>
    <severityLevelConfiguration logMessage="true" logWarning="true" logError="true"/>
    <logTargetConfiguration
      logToConsole="true"
      logToFile="true"
      logToDatabase="true"
      databaseConnectionString ="Data Source=.\; Initial Catalog=DbTest; Integrated Security=Yes"
      logDirectoryPath="C:\Logs"/>
  </jobLoggerConfiguration>

  <startup>
    <supportedRuntime version="v4.0" sku=".NETFramework,Version=v4.5"/>
  </startup>
</configuration>
